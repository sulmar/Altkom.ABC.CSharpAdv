            <DataGrid ItemsSource="{Binding Vehicles}"
                      AutoGenerateColumns="True"
                      AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"                      
                      >
            </DataGrid>

            <!--<ListBox ItemsSource="{Binding Vehicles}">
